<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.detail.DetailTaskActivity">

    <ImageView
        android:id="@+id/detail_video_player"
        android:layout_width="0dp"
        android:layout_height="177dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_soft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_title" />

    <TextView
        android:id="@+id/detail_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title_hint"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/details_hint"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/detail_btn_favorite"
        app:layout_constraintStart_toStartOf="@+id/detail_video_player"
        app:layout_constraintTop_toBottomOf="@+id/detail_video_player" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dummy_detail"
        app:layout_constraintEnd_toEndOf="@+id/detail_video_player"
        app:layout_constraintStart_toStartOf="@+id/detail_video_player"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:lines="5" />

    <Button
        android:id="@+id/detail_btn_share"
        style="@style/Widget.AppCompat.Light.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconGravity="end"
        app:iconTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/detail_video_player"
        app:layout_constraintTop_toBottomOf="@+id/detail_video_player" />

    <Button
        android:id="@+id/detail_btn_favorite"
        style="@style/Widget.AppCompat.Light.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_star"
        app:iconGravity="end"
        app:iconTint="@color/purple_500"
        app:layout_constraintEnd_toStartOf="@+id/detail_btn_share"
        app:layout_constraintTop_toTopOf="@+id/detail_btn_share" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_child"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:itemCount="1"
        tools:listitem="@layout/task_item" />

    <Button
        android:id="@+id/detail_btn_edit_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>